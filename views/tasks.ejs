<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-clipboard-list fa-6x"></i>
    <h1 class="display-3">Here Is your ToDo list!</h1>

    <% tasks.forEach(function(task){ %>
      <p class="secret-text"><%= task.title %></p>
    <%})%>

    <hr>

    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Register a task</a>
    <a class="btn btn-danger btn-lg" href="/delete" role="button">Delete a task</a>
    <a class="btn btn-warning btn-lg" href="/edit" role="button">Edit a task</a>
  </div>
</div>

<%- include('partials/footer') %>
